<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign In - Job Scraper</title>
    
    <!-- Main CSS -->
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
    <a href="/" class="back-to-home">
        <i class="zmdi zmdi-arrow-left"></i>
        Back to Home
    </a>
    
    <div class="auth-main">
        <div class="auth-container">
            <div class="auth-content">
                <!-- Sign In Image -->
                <div class="auth-image">
                    <figure>
                        <img src="https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Sign in image">
                    </figure>
                    <a href="/register" class="auth-link">Create an account</a>
                </div>

                <!-- Sign In Form -->
                <div class="auth-form">
                    <h2 class="form-title">Sign In</h2>
                    
                    <!-- Error Message -->
                    <% if (typeof error !== 'undefined') { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } %>
                    
                    <form method="POST" action="/login" class="auth-form-container">
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            <input type="email" name="email" id="email" placeholder="Your Email" required/>
                        </div>
                        
                        <div class="form-group">
                            <label for="password"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" name="password" id="password" placeholder="Password" required/>
                        </div>
                        
                        <div class="form-group">
                            <div class="checkbox-group">
                                <input type="checkbox" name="remember-me" id="remember-me" class="custom-checkbox">
                                <label for="remember-me" class="checkbox-label">
                                    <span class="checkmark"></span>
                                    Remember me
                                </label>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" name="signin" class="form-submit" value="Sign In"/>
                        </div>
                    </form>
                    
                    <!-- Social Login -->
                    <div class="social-login">
                        <span class="social-label">Or login with</span>
                        <ul class="socials">
                            <li><a href="#" class="facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                            <li><a href="#" class="twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                            <li><a href="#" class="google"><i class="zmdi zmdi-google"></i></a></li>
                        </ul>
                    </div>
                    
                    <!-- Additional Links -->
                    <div style="text-align: center; margin-top: 20px;">
                        <a href="/reset-password" class="term-service">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>